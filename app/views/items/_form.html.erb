<%= form_with model: @item, local: true do |f|%>
  <div class="field">
    <%= f.label :item_name, "商品名" %><br />
    <%= f.text_field :item_name, id:"item_name" %>
  </div>

  <div class="field">
    <%= f.label :descripton, "商品説明" %><br />
    <%= f.text_area :description, class: :form__text, id:"item_description" %>
  </div>

  <div class="field">
    <%= f.label :category_name, "カテゴリー" %><br />
    <%= f.text_field :category_name, class: :form__text, id:"item_category_name" %>
  </div>

  <div class="field">
    <%= f.label :category_status, "商品の状態" %><br />
    <%= f.text_field :category_status, class: :form__text, id:"item_category_status" %>
  </div>

  <div class="field">
    <%= f.label :price, "値段" %><br />
    <%= f.text_field :price, class: :form__text, id:"item_price" %>
  </div>

  <div class="field">
    <%= f.label :image, "商品の画像" %><br />
    <%= f.file_field :image, id:"item_image" %>
  </div>

  <div class="actions">
    <%= f.submit "出品する", class: :form__btn  %>
  </div>
<% end %>