<div class="card">

  <%= link_to image_tag(item.image, class: :card__img), items_path(item.id) %>
  <div class="card__body">
    <%= link_to item.item_name, items_path(item.id), class: :card__title %>
    <p class="card__summary">
      <%= item.price %>円 　✖︎　１個<br>
      <%= item.description %>
    </p>
    <%= link_to item.user.nickname, user_path(item.user), class: :card__user %>
  </div>
</div>